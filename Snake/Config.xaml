<Window x:Class="Snake.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Snake Configuration" Height="450" Width="400" ResizeMode="CanMinimize"
        Background="{StaticResource BackgroundColor}"
        FontFamily="{StaticResource MainFont}"
        Foreground="{StaticResource TextColor}">
    <Grid>
        <Button Content="Save Settings to File" HorizontalAlignment="Left" Margin="139,374,0,0" VerticalAlignment="Top" Height="20" Width="168"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="318,374,0,0" VerticalAlignment="Top" Height="20" Width="63"/>
        <TextBlock HorizontalAlignment="Left" Height="15" Margin="10,42,0,0" TextWrapping="Wrap" Text="Squares Moved/s" VerticalAlignment="Top" Width="118"/>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="10,10,0,0" TextWrapping="Wrap" Text="Snake Configuration" VerticalAlignment="Top" Width="178" FontSize="14"/>
        <TextBox x:Name="configInput_SQ_s" HorizontalAlignment="Left" Height="15" Margin="128,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" TextChanged="configInput_SQ_s_TextChanged"/>

    </Grid>
</Window>
